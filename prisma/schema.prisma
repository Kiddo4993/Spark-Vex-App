// VEX Robotics ELO & Skills - Prisma Schema
// Vercel-compatible PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  teamId    String   @unique
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id                    String    @id @default(cuid())
  teamNumber            String    @unique // Unique robot team number (e.g. "1234A")
  provinceState         String?
  country               String?
  drivetrainType        String?
  autonomousSide        String?   // left / right / skills / etc
  autonReliabilityPct   Float?
  notes                 String?  @db.Text
  strategyTags          String[] // e.g. ["defensive", "fast auton"]
  // Bayesian performance model
  performanceRating     Float     @default(100)
  ratingUncertainty     Float     @default(50)
  matchCount            Int       @default(0)
  
  // Scouting data (user-inputted)
  autoStrength          Float?    // 0-10 scale
  driverStrength        Float?    // 0-10 scale

  // Relations
  user                  User?
  performanceHistory    PerformanceHistory[]
  teamMatchStats        TeamMatchStats[]
  skillsRecords         SkillsRecord[]
  awards                Award[]
  connectionsFrom       Connection[] @relation("ConnectionFrom")
  connectionsTo         Connection[] @relation("ConnectionTo")
  sharedNotesFrom       Note[]       @relation("NoteFrom")
  sharedNotesTo         Note[]       @relation("NoteTo")
  matchComments         MatchComment[]
  matchesAsRed1         Match[]      @relation("RedTeam1")
  matchesAsRed2         Match[]      @relation("RedTeam2")
  matchesAsRed3         Match[]      @relation("RedTeam3")
  matchesAsBlue1        Match[]      @relation("BlueTeam1")
  matchesAsBlue2        Match[]      @relation("BlueTeam2")
  matchesAsBlue3        Match[]      @relation("BlueTeam3")
  taskColumns           TaskColumn[]
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

model Match {
  id          String   @id @default(cuid())
  eventName   String
  date        DateTime
  redScore    Int
  blueScore   Int
  // Alliance team IDs (stored as team numbers for clarity; we join via Team)
  redTeam1Id  String
  redTeam2Id  String
  redTeam3Id  String
  blueTeam1Id String
  blueTeam2Id String
  blueTeam3Id String
  redTeam1    Team     @relation("RedTeam1", fields: [redTeam1Id], references: [id])
  redTeam2    Team     @relation("RedTeam2", fields: [redTeam2Id], references: [id])
  redTeam3    Team     @relation("RedTeam3", fields: [redTeam3Id], references: [id])
  blueTeam1   Team     @relation("BlueTeam1", fields: [blueTeam1Id], references: [id])
  blueTeam2   Team     @relation("BlueTeam2", fields: [blueTeam2Id], references: [id])
  blueTeam3   Team     @relation("BlueTeam3", fields: [blueTeam3Id], references: [id])
  teamMatchStats TeamMatchStats[]
  comments    MatchComment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TeamMatchStats {
  id          String   @id @default(cuid())
  matchId     String
  teamId      String
  match       Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  team        Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  alliance    String   // "red" | "blue"
  score       Int

  performanceBefore     Float
  performanceAfter      Float
  uncertaintyBefore     Float
  uncertaintyAfter      Float
  expectedOutcome       Float   // 0-1 probability
  carryFactor           Float   // Credit distribution for this team
  surpriseFactor        Float   // |A - E| for uncertainty update
  createdAt   DateTime @default(now())
  @@unique([matchId, teamId])
  @@index([teamId])
  @@index([matchId])
}

model PerformanceHistory {
  id                String   @id @default(cuid())
  teamId            String
  team              Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  performanceRating Float
  uncertainty       Float
  matchId           String?
  createdAt         DateTime @default(now())
  @@index([teamId])
}

model SkillsRecord {
  id                  String   @id @default(cuid())
  teamId              String
  team                Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  driverSkillsScore   Int?
  autonomousSkillsScore Int?
  combinedSkillsScore Int?
  provincialSkillsRank Int?
  worldwideSkillsRank Int?
  lastUpdated         DateTime @default(now())
  @@index([teamId])
}

model Award {
  id        String   @id @default(cuid())
  teamId    String
  name      String   // e.g., "Excellence Award (VRC)"
  event     String   // e.g., "2024 Ontario Provincial Championship"
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  // Ensure we don't duplicate the same award from the same event
  @@unique([teamId, name, event])
  @@index([teamId])
}

model Connection {
  id        String   @id @default(cuid())
  fromTeamId String
  toTeamId   String
  status    String   // "pending" | "accepted" | "denied"
  fromTeam  Team     @relation("ConnectionFrom", fields: [fromTeamId], references: [id], onDelete: Cascade)
  toTeam    Team     @relation("ConnectionTo", fields: [toTeamId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([fromTeamId, toTeamId])
  @@index([toTeamId])
  @@index([fromTeamId])
}

model Note {
  id        String   @id @default(cuid())
  fromTeamId String
  toTeamId   String
  type      String   // "strategy" | "scouting"
  content   String   @db.Text
  fromTeam  Team     @relation("NoteFrom", fields: [fromTeamId], references: [id], onDelete: Cascade)
  toTeam    Team     @relation("NoteTo", fields: [toTeamId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([fromTeamId])
  @@index([toTeamId])
}

model MatchComment {
  id        String   @id @default(cuid())
  matchId   String
  teamId    String
  content   String   @db.Text
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([matchId])
  @@index([teamId])
}

// ============== Task Board Models ==============

model TaskColumn {
  id        String   @id @default(cuid())
  name      String   // e.g., "To Do", "In Progress", "Done"
  order     Int      @default(0)
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([teamId])
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String?      @db.Text
  priority    String       @default("medium") // low, medium, high
  dueDate     DateTime?
  order       Int          @default(0)
  columnId    String
  column      TaskColumn   @relation(fields: [columnId], references: [id], onDelete: Cascade)
  assignees   String[]     // Array of team member names
  tags        String[]     // e.g., ["mechanical", "programming"]
  subtasks    Subtask[]
  comments    TaskComment[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  @@index([columnId])
}

model Subtask {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@index([taskId])
}

model TaskComment {
  id        String   @id @default(cuid())
  taskId    String
  author    String   // Name of commenter
  content   String   @db.Text
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@index([taskId])
}

